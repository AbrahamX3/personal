---
import { db, Skills } from "astro:db";

const skills = await db.select().from(Skills).all();
---

<section class="flex flex-col items-center justify-center align-middle">
  <h3 class="text-lg font-bold text-white md:text-xl pb-4">
    Current Tech Stack
  </h3>
  <div
    class="mx-auto w-full flex flex-wrap items-center align-middle gap-2 justify-center rounded-md md:w-1/2"
  >
    {
      skills.map(({ name }) => (
        <span class="rounded-lg w-max border border-white/10 bg-white/10 text-white px-2 backdrop-blur-sm">
          {name}
        </span>
      ))
    }
  </div>
</section>
