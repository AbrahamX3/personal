---
import { db, eq, Views } from "astro:db";

async function incrementCounter() {
  const currentCount = await db.select().from(Views);

  if (currentCount.length === 0) {
    await db.insert(Views).values({ count: 1 }).execute();
    return 1;
  } else {
    const updatedCount = currentCount[0].count + 1;
    await db
      .update(Views)
      .set({ count: updatedCount, lastViewed: new Date() })
      .where(eq(Views.id, 1))
      .execute();
    return updatedCount;
  }
}

const totalViews = await incrementCounter();
---

<p
  class="text-sm flex gap-2 text-white leading-tight tracking-tighter items-center justify-center align-middle"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="size-4"
    viewBox="0 0 24 24"
  >
    <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"></path>
    <circle cx="12" cy="12" r="3"></circle>
  </svg>
  <span>{totalViews} views</span>
</p>
