---
interface Props {
  label: string;
  url: string;
  icon?: void;
}

const { label, url, icon } = Astro.props;
---

<a
  target="_blank"
  rel="noopener noreferrer"
  href={url}
  class="flex relative shadow-slate-800 shadow items-center gap-x-2 rounded-lg group/lights border border-white/10 bg-white/10 px-2 py-1 text-center align-middle text-white backdrop-blur-sm transition-colors duration-150 ease-in hover:border-slate-100/50"
>
  <span class="z-10"
    >{
      icon ? (
        icon
      ) : (
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="w-4 h-4"
        >
          <>
            <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71" />
            <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71" />
          </>
        </svg>
      )
    }</span
  >
  <p class="z-10">{label}</p>
  <div class="absolute z-0 rounded-md inset-0 overflow-hidden dark">
    <div
      class="rays absolute -inset-3 opacity-20 group-hover/lights:opacity-70"
    >
    </div>
  </div>
</a>
