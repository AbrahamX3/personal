---
import "~/styles/main.css";

import Introduction from "~/components/introduction.astro";
import ProjectsSection from "~/components/projects-section.astro";
import SkillsSection from "~/components/skills-section.astro";
import SocialsSection from "~/components/socials-section.astro";
import SpotifyCurrentlyPlaying from "~/components/spotify-currently-playing";
import ViewCounter from "~/components/view-counter.astro";
import Layout from "~/layouts/Layout.astro";
---

<Layout>
  <main
    class="bg-gradient-to-br from-gray-700 via-gray-900 to-black flex h-full min-h-screen w-full flex-col justify-center align-middle"
  >
    <div
      class="mx-auto z-10 my-auto flex w-full flex-col justify-center gap-y-5 p-4 align-middle"
    >
      <Introduction />
      <SocialsSection />
      <ProjectsSection />
      <SkillsSection />
      <SpotifyCurrentlyPlaying client:load />
      <ViewCounter />
    </div>
    <div class="absolute z-0 rounded-md inset-0 overflow-hidden dark">
      <div
        class="rays absolute -inset-3 opacity-20 group-hover/lights:opacity-70"
      >
      </div>
    </div>
  </main>
</Layout>
